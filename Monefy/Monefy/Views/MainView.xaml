<Window x:Class="Monefy.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Monefy.Views"
        mc:Ignorable="d"
        Title="MainView" Height="700" Width="400" WindowStyle="None">

    <Grid Background="Azure">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border
            x:Name="Main"
            Grid.ColumnSpan="4"
            Background="LightGreen"
            MouseLeftButtonDown="DragWindow">
        </Border>

        <TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="20"
            FontStyle="Italic"
            Foreground="AliceBlue"
            Margin="3">
            Monefy
        </TextBlock>

        <StackPanel
            Margin="2" 
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Width="150">

            <Button 
                Click="Minimize_Click"
                Name="Minimize"
                Style="{DynamicResource MaterialDesignFlatButton}">
                <md:PackIcon Kind="Minimize"/>
            </Button>

            <Button 
                Click="Maximize_Click"
                Name="Maximize"
                Style="{DynamicResource MaterialDesignFlatButton}">
                <md:PackIcon Kind="Maximize"/>
            </Button>

            <Button 
                Click="Close_Click"
                Name="Close"
                Style="{DynamicResource MaterialDesignFlatButton}">
                <md:PackIcon Kind="Close"/>
            </Button>
        </StackPanel>
        
        <ContentControl Grid.Row="2"  Content="{Binding CurrentView, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>