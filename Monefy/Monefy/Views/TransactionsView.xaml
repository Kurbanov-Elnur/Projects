<UserControl x:Class="Monefy.Views.TransactionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monefy.Views"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:wp="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             Name="Transactions"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400" Background="White">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border
            Background="#3d56fa"
            CornerRadius="0 0 80 80">

            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="Gray"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button
                    Width="60"
                    Height="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Foreground="White"
                    Style="{DynamicResource MaterialDesignFlatAccentButton}"
                    Command="{Binding Back}">

                    <md:PackIcon Kind="ArrowLeft" Height="20" Width="20"/>
                </Button>

                <TextBlock
                    Text="Transactions"
                    FontSize="24"
                    Foreground="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                </TextBlock>

                <TextBlock
                    Grid.Row="1"
                    Text="{Binding TotalExpenses}"
                    FontSize="24"
                    Foreground="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                </TextBlock>
            </Grid>
        </Border>

        <Border
            Background="#3d56fa"
            Grid.Row="1"
            CornerRadius="80 80 0 0"
            Margin="0 30 0 0">

            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Gray" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="0.3*"/>
                        </Grid.ColumnDefinitions>

                        <Border
                            CornerRadius="20"
                            Background="Black"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="250"
                            Height="40"
                            Opacity="0.85">

                            <TextBox
                                md:HintAssist.Hint="Search"
                                Background="Transparent"
                                BorderThickness="0"
                                Width="230"
                                Height="30"
                                FontSize="20"
                                Foreground="White"
                                Style="{DynamicResource MaterialDesignDataGridTextColumnEditingStyle}">

                            </TextBox>
                        </Border>
                        
                        <Button
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource MyButtonStyle}"
                            Width="40"
                            Height="40">

                            <md:PackIcon Kind="Search"/>
                        </Button>
                    </Grid>
                </Border>

                <ScrollViewer
                    Grid.Row="1"
                    HorizontalScrollBarVisibility="Hidden"
                    VerticalScrollBarVisibility="Hidden">
                    <ItemsControl ItemsSource="{Binding Transactions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Border
                                        Background="#33FFFFFF"
                                        CornerRadius="15"
                                        Margin="0 0 0 5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <Label
                                                HorizontalAlignment="Left">
                                                
                                                <md:PackIcon
                                                Kind="{Binding Icon.Name}"
                                                Width="40"
                                                Height="40"
                                                Foreground="{Binding Icon.Color}"/>
                                            </Label>

                                            <TextBlock
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Center"
                                                Text="{Binding Category}"
                                                FontSize="20"
                                                Foreground="White">

                                            </TextBlock>

                                            <Label
                                                Foreground="White"
                                                Grid.Column="2"
                                                Content="{Binding Amount}"
                                                FontSize="30"
                                                HorizontalAlignment="Center"
                                                Margin="40 0 0 0">
                                                
                                            </Label>

                                            <Button
                                                Width="30"
                                                Height="30"
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                Style="{StaticResource MyButtonStyle}"
                                                Background="Transparent"
                                                Command="{Binding ElementName=Transactions, Path=DataContext.MoreInfo}"
                                                CommandParameter="{Binding}">
                                                
                                                <md:PackIcon Kind="ArrowRightBoldCircle" Width="30" Height="30" Foreground="AliceBlue"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>